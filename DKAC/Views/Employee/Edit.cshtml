    $("#BirthDay")({ dateFormat: 'dd/MM/yyyy'});

    $("#BirthDay").datepicker({ dateFormat: 'yyyy/MM/dd'});

    $(function () {
        $("#BirthDay").datepicker({
                dateFormat: 'yyyy/MM/dd' })
    });
</script>