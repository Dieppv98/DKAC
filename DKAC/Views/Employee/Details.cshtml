@using DKAC.Models.Enum;
@model DKAC.Models.InfoModel.UserInfo

@{
    ViewBag.Title = "Xem chi tiết nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    label {
        margin-top: 8px;
        color: #435d7d;
        font-weight: 700;
    }

    .form-group {
        border: 2px solid #afc9e4;
        background: #eef6ff;
        padding: 20px;
    }

        .form-group .row {
            margin-top: 20px;
            margin-bottom: 20px;
        }
</style>

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <i class="fa fa-align-left" style="font-size: 25px; margin-top: 6px;"></i>
                <div class="col-sm-6">
                    <h2>Chi tiết nhân viên</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <ol class="breadcrumb" style="margin-left: 15px;">
                <li style="margin-right: 10px"><a href="/"> <i class="fa fa-home"></i>Home</a></li>
                <li style="margin-right: 10px"><a href="/Employee"><i class="fa fa-list"></i>Danh sách</a></li>
                <li class="active">
                    <span>Chi tết nhân viên: @Model.FullName</span>
                </li>
            </ol>
        </div>

        <form action="" method="post" id="edit">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.HiddenFor(m => m.id, new { @class = "form-control", @id = "Id" })
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-2">
                        <label>Họ tên nhân viên: </label>
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @id = "FullName", @maxlength = "200", @disabled = "true" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-2">
                        <label>Tài khoản (Mã nhân viên): </label>
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @id = "UserName", @maxlength = "200", @disabled = "true" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-2">
                        <label>Phòng ban: </label>
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(a => a.RoomName, new { @class = "form-control", @id = "RoomId", @disabled = "true" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-2">
                        <label>Vai trò: </label>
                    </div>
                    <div class="col-md-6">
                        @if (Model.Role == 1)
                        {
                            <input type="text" class="form-control" value="Nhân viên" disabled />
                        }
                        else
                        {
                            <input type="text" class="form-control" value="Trưởng phòng" disabled />
                        }
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-2">
                        <label>Vị trí: </label>
                    </div>
                    <div class="col-md-6">
                        @if (Model.UserGroupId == (int)GroupUser.User)
                        {
                            <input type="text" class="form-control" value="Nhân viên" disabled />
                        }
                        else if (Model.UserGroupId == (int)GroupUser.Management)
                        {
                            <input type="text" class="form-control" value="Quản lý" disabled />
                        }
                        else if (Model.UserGroupId == (int)GroupUser.admin)
                        {
                            <input type="text" class="form-control" value="Admin" disabled />
                        }
                    </div>
                </div>
            </div>
        </form>

        <div class="row">
            <div class="col-md-12 col-md-offset-2 text-right">
                <a type="button" class="btn btn-success" href="/Employee" style="width: 10%">Trở về</a>
            </div>
        </div>
    </div>
</div>
<!--Js file-->
